<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insumos_otm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oneapp.Mantenimiento.InsumosOTM"
    android:background="@drawable/fondoinsumos"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblanco"
                android:textSize="20dp"
                android:text="@string/insumosadquiridos"/>
            <Spinner
                android:id="@+id/insumos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner"
                android:popupBackground="@color/grisoscuro">

            </Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblanco"
                android:textSize="20dp"
                android:text="@string/referencia"/>
            <Spinner
                android:id="@+id/referencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner"
                android:popupBackground="@color/grisoscuro">

            </Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblanco"
                android:textSize="20dp"
                android:text="@string/preciounitario"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/Preci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorblanco"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblanco"
                android:textSize="20dp"
                android:text="@string/cantidad"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorblanco"
                android:inputType="number"/>
            <Button
                android:id="@+id/enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botones"
                android:textColor="@color/colorblanco"
                android:textSize="20dp"
                android:text="@string/enviarynuevoinsumo"
                android:layout_marginTop="5dp"
                />
            <Button
                android:id="@+id/regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botones"
                android:textColor="@color/colorblanco"
                android:textSize="20dp"
                android:text="@string/regresaejecuciondeotm"
                android:layout_marginTop="5dp"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
